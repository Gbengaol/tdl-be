extends baseEmail

block content
    p Hi #{data.first_name},
    p Did you forget your password and also request that it be reset? If yes, kindly click on the button below to reset it
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
        tbody
            tr
                td(align='left')
                    table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                        tbody
                            tr
                                td
                                    a(href=`${data.url}`, target='_blank') Click this link to reset your password
    p If you didn't forget your password, please ignore this email!